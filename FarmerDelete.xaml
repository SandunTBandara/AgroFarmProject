<Window x:Class="cwainmenuexs1.FarmerDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        WindowStyle="none"
        xmlns:local="clr-namespace:cwainmenuexs1"
        mc:Ignorable="d"
        Title="FarmerDelete" Height="200" Width="310">
    <StackPanel Orientation="Vertical" Margin="0,0,-23.4,26.4">
        <StackPanel Height="20" Background="#FF2F4F4F"/>
        <TextBlock Text="Do you want to delete your Account?" Margin="20 10" FontSize="16"/>
        <TextBlock Text="Once you delete your account all your details, orders and bids will be deleted?" Margin="25 0" FontSize="12" TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="YES" x:Name="btn_yes" Click="btn_yes_Click" Background="#FF2F4F4F"  Margin="50 20"/>
            <Button Content="No" x:Name="btn_no" Click="btn_no_Click" Background="#FF2F4F4F"  Margin="50 20"/>
        </StackPanel>
    </StackPanel>
</Window>
